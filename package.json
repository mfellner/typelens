{
  "name": "typelens",
  "version": "1.0.0",
  "description": "A typesafe hierarchical configuration manager for Node.js and the browser.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Maximilian Fellner <max.fellner@gmail.com>",
  "license": "MIT",
  "browser": "dist/TypeConfBrowser.js",
  "repository": "https://github.com/mfellner/typelens",
  "files": [
    "dist/"
  ],
  "keywords": [
    "configuration",
    "settings",
    "typescript",
    "environment"
  ],
  "engines": {
    "node": ">=8.9.4"
  },
  "scripts": {
    "clean": "rimraf dist/*",
    "build": "tsc -p .",
    "dist": "npm run clean && npm run build",
    "lint": "tslint --type-check --project tsconfig.json",
    "test": "npm run lint && jest --coverage",
    "prettier": "prettier --write \"./src/**/*.+(js|ts)\"",
    "prepublishOnly": "npm run dist"
  },
  "devDependencies": {
    "@types/jest": "22.2.0",
    "@types/node": "9.4.6",
    "jest": "22.4.2",
    "prettier": "1.11.1",
    "rimraf": "2.6.2",
    "ts-jest": "22.4.1",
    "ts-node": "5.0.1",
    "tslint": "5.9.1",
    "typescript": "2.7.2"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2)$": "<rootDir>/test/__mocks__/file-mock.js",
      "\\.(css|scss|less)$": "<rootDir>/test/__mocks__/style-mock.js"
    },
    "transform": {
      "\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./test/tsconfig.json"
      }
    },
    "testRegex": "/test/.*\\.test.ts$",
    "coverageReporters": [
      "json",
      "lcov",
      "text"
    ]
  }
}
